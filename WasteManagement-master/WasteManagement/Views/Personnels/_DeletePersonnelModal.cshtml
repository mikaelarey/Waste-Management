
@model WasteManagement.Models.Personnels

<div class="modal fade" id="DeletePersonnelModal" tabindex="-1" role="dialog" aria-labelledby="DeletePersonnelModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white" id="exampleModalLongTitle">Delete Personnel</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Delete", "Personnels", FormMethod.Post))
                {
                    @Html.HiddenFor(p => p.PersonnelID, new { id = "deletePersonnelId" })

                    <h4 class="text-center">Are you sure you want to delete this personnel?</h4>
                    <p>Name: <span id="deleteFirstName"></span> <span id="deleteLastName"></span></p>
                    <p>Contact Number: <span id="deleteContactNumber"></span></p>

                    <button class="btn btn-danger btn-block px-5 my-4" type="submit">Delete</button>
                }
            </div>
        </div>
    </div>
</div>