@model IEnumerable<WasteManagement.Models.Personnels>

<style>
    .table-header {
        text-align: center;
    }

    .table-data {
        line-height: 2rem;
        width: 25%;
        text-align: center;
    }

        .table-data button {
            padding: 0.2rem;
            width: 5rem
        }
</style>

<div class="col-12">
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex jus">
                <span class="d-inline-block">
                    <i class="fas fa-table mr-1"></i>Lists Of Personnels
                </span>
                <button class="btn btn-primary ml-auto" style="padding: 0.2rem;width: 5rem"
                        data-toggle="modal" data-target="#AddPersonnelModal">
                    Add
                </button>
            </div>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="table-header d-none">Personnel Id</th>
                            <th class="table-header">First Name</th>
                            <th class="table-header">Last Name</th>
                            <th class="table-header">Contact</th>
                            <th class="table-header">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="table-data d-none" id="pi_@item.PersonnelID">@item.PersonnelID</td>
                                        <td class="table-data" id="fn_@item.PersonnelID">@item.FirstName</td>
                                        <td class="table-data" id="ln_@item.PersonnelID">@item.LastName</td>
                                        <td class="table-data" id="cn_@item.PersonnelID">@item.ContactNumber</td>
                                        <td class="table-data">
                                            <button class="btn btn-info update" id="u_@item.PersonnelID" onclick="updatedata(this.id)">Update</button>
                                            <button class="btn btn-danger delete" id="d_@item.PersonnelID" onclick="deletedata(this.id)">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
    
