@model WasteManagement.Models.tbl_Schedule

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="card col-md-6">
        <div class="card-header">
            <h5>Add Schedule</h5>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("encBy.ID", Session["ID"])
            <div class="row mb-2">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Schedule, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.Schedule, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Schedule, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Day, htmlAttributes: new { @class = "" })
                    @Html.EditorFor(model => model.Day, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "" })
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" } )
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-5">
                <div class="col">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Dashboard")
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
