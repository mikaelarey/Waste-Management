@model IEnumerable<WasteManagement.Models.tbl_Schedule>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Admin.cshtml";
}




<div class="card">
    <div class="card-header">
        <h2>Dashboard</h2>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-success" })
        </p>
        <table class="table table-hover table-striped">
            <tr class="table-dark">
                <th>
                    @Html.DisplayNameFor(model => model.Schedule)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Day)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    Encoded By
                </th>
                <th>
                    Encoded Date
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @string.Format("{0:MMMM dd, yyyy}", item.Schedule)
                    </td>
                    <td>
                        @string.Format("{0}", item.Day)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.encBy.Fullname)
                    </td>
                    <td>
                        @string.Format("{0:MMM dd, yyyy hh:mm tt}", DateTime.Parse(item.encDate))
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
