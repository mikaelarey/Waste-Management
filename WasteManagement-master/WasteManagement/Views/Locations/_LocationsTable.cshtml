@model IEnumerable<WasteManagement.Models.Locations>

<style>
    .table-header {
        text-align: center;
    }

    .table-data {
        line-height: 2rem;
        width: 25%;
        text-align: center;
    }

        .table-data button {
            padding: 0.2rem;
            width: 5rem
        }
</style>

<div class="col-12">
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex jus">
                <span class="d-inline-block">
                    <i class="fas fa-table mr-1"></i>Lists Of Locations
                </span>
                <button class="btn btn-primary ml-auto" style="padding: 0.2rem;width: 5rem"
                        data-toggle="modal" data-target="#CommingSoon">
                    Add
                </button>
            </div>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="table-header">Id</th>
                            <th class="table-header">Location</th>
                            <th class="table-header">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="table-data" id="pi_@item.LocationId">@item.LocationId</td>
                                        <td class="table-data" id="fn_@item.LocationId">@item.LocationName</td>
                                        <td class="table-data">
                                            <button class="btn btn-info update" id="u_@item.LocationId" data-toggle="modal" data-target="#CommingSoon">Update</button>
                                            <button class="btn btn-danger delete" id="d_@item.LocationId" data-toggle="modal" data-target="#CommingSoon">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
