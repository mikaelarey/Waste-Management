@model IEnumerable<WasteManagement.Models.tbl_Remarks>

@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="card col-md-6">
    <div class="card-header">
        <h4>Remarks</h4>
    </div>
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-md-12">
                @Html.ActionLink("Add Remarks", "Create", "", new { @class = "btn btn-sm btn-success" })
            </div>
        </div>
        <div class="row g-0 mb-2">
            <div class="col-md-12">
                <div class="container-fluid">
                    @foreach (var item in Model)
                    {
                        <div class="card col-md-12 mb-2">
                            <div class="row">
                                <div class="col-auto m-auto">
                                    <div class="card-body">
                                        <i class="fs-1 bi-person"></i>
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    <div class="card-body">
                                        <h5 class="card-title"><b>@item.encBy.Fullname.ToUpper()</b></h5>
                                        <p class="card-text">@item.Remarks<br><small class="text-muted">@string.Format("{0:MMM dd, yyyy}", Convert.ToDateTime(@item.encDate))</small>&nbsp;@if (ViewBag.user.ID == item.encBy.ID)
                                        {
                                            @Html.ActionLink("Edit", "Edit", new { ID = item.ID }, new { @class = "card-link text-decoration-none" })
                                        }</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
            </div>

        </div>

    </div>
</div>


